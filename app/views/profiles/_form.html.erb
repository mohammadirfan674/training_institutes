
<%= form_with model: profile do |form| %>

  <div>
    <%= form.label :full_name %><br>
    <%= form.select :full_name, [["Mr.", "Mr."], ["Mrs.", "Mrs."],
            ["Ms.", "Ms."]] %>
    <%= form.text_field :full_name %>
  </div>

    <%= form.hidden_field :user_id, :value => current_user.id %>

  <div>
    <%= form.label :gender %><br>
    <% ['male', 'female', 'other'].each do |ele| %>
    <%= form.radio_button(:gender, ele) %><%= form.label ele %>
    <% end %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :date_of_birth %><br>
    <%= form.date_select :date_of_birth %>
  </div>

  <div>
    <%= form.label :registration_no %><br>
    <%= form.text_field :registration_no %>
  </div>

  <div>
    <%= form.label :course %><br>
    <%= form.select :course, [["Modern javascript", "Modern javascript"],
    ["Python and Django", "Python and Django"], [".Net mvc", ".Net mvc"],
      ["Learn and understand nodejs","Learn and understand nodejs"],
      ["Bootstrap 4","Bootstrap 4"], ["other", "other"]] %>
  </div>

  <div>
    <%= form.label :mobile_no %><br>
    <%= form.telephone_field :mobile_no %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>
